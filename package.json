{
  "name": "diffset",
  "version": "2.1.6",
  "private": true,
  "description": "GitHub Action for producing list of files that changed between branches",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/main.ts --minify",
    "buildcheck": "tsc --noEmit -p .",
    "test": "jest --coverage",
    "fmt": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "fmtcheck": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softprops/diffset.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "softprops",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/plugin-throttling": "^10.0.0",
    "@octokit/rest": "^21.1.1",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.15.3",
    "@vercel/ncc": "^0.38.3",
    "husky": "^9.1.7",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "lint-staged": "^15.5.1",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "{__tests__,src}/**/*.ts": [
      "npm run fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
