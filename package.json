{
  "name": "diffset",
  "version": "2.0.0",
  "private": true,
  "description": "GitHub Action for producing list of files that changed between branches",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/main.ts --minify",
    "buildcheck": "tsc --noEmit -p .",
    "test": "jest --coverage",
    "fmt": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "fmtcheck": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softprops/diffset.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "softprops",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/plugin-throttling": "^4.3.2",
    "@octokit/rest": "^19.0.5",
    "minimatch": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.14.5",
    "@vercel/ncc": "^0.38.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "{__tests__,src}/**/*.ts": [
      "npm run fmt",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
